{% extends 'base.html.twig' %}

{% block title %}Vérification du joueur{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h1 class="h3 mb-0">Vérification des informations</h1>
                    </div>
                    <div class="card-body">
                        {% if player.photoFilename %}
                            <div class="text-center mb-4">
                                <img src="{{ asset('uploads/player/tmp/' ~ player.photoFilename) }}" 
                                     class="img-fluid rounded" 
                                     style="max-height: 300px; width: auto;"
                                     alt="{{ player.firstName }} {{ player.lastName }}">
                            </div>
                        {% endif %}

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <h5 class="text-primary">Informations personnelles</h5>
                                <p>
                                    <strong>Nom complet:</strong><br>
                                    {{ player.firstName }} {{ player.lastName }}
                                </p>
                                <p>
                                    <strong>Date de naissance:</strong><br>
                                    {{ player.birthDate|date('d/m/Y') }}
                                </p>
                                <p>
                                    <strong>Nationalité:</strong><br>
                                    {{ player.nationality.nom }}
                                </p>
                            </div>
                            <div class="col-md-6">
                                <h5 class="text-primary">Informations sportives</h5>
                                <p>
                                    <strong>Position:</strong><br>
                                    {{ player.position }}
                                </p>
                                <p>
                                    <strong>Numéro:</strong><br>
                                    {{ player.jerseyNumber }}
                                </p>
                                <p>
                                    <strong>Club:</strong><br>
                                    {{ player.club.nom }}
                                </p>
                                <p>
                                    <strong>Coupes du monde:</strong><br>
                                    {{ player.worldCups }}
                                </p>
                            </div>
                        </div>

                        {% if player.photoFilename %}
                            <div class="alert alert-info">
                                <i class="fas fa-image"></i> Une photo a été sélectionnée et sera enregistrée avec le joueur.
                            </div>
                        {% endif %}

                        <div class="d-flex justify-content-between mt-4">
                            <form method="post" class="d-inline">
                                <button type="submit" name="action" value="modify" class="btn btn-secondary">
                                    <i class="fas fa-edit"></i> Modifier
                                </button>
                            </form>
                            <form method="post" class="d-inline">
                                <button type="submit" name="action" value="confirm" class="btn btn-success">
                                    <i class="fas fa-check"></i> Confirmer
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .position-title {
            color: #1a237e;
            padding-bottom: 0.5rem;
            border-bottom: 2px solid #1a237e;
            margin-bottom: 1.5rem;
        }
        .card {
            transition: transform 0.2s;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }
        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.2);
        }
        .btn-group {
            gap: 5px;
        }
        .card-footer {
            background-color: transparent;
        }
    </style>
{% endblock %}
