{% extends 'base.html.twig' %}

{% block title %}Vérification des informations du joueur{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-header">
            <h1 class="h3 mb-0">Vérification des informations</h1>
        </div>
        
        <div class="card-body">
            <div class="row mb-4">
                <div class="col-md-8">
                    <h4>Résumé des informations du joueur</h4>
                    <table class="table">
                        <tr>
                            <th>Nom</th>
                            <td>{{ player.lastName }}</td>
                        </tr>
                        <tr>
                            <th>Prénom</th>
                            <td>{{ player.firstName }}</td>
                        </tr>
                        <tr>
                            <th>Position</th>
                            <td>{{ player.position }}</td>
                        </tr>
                        <tr>
                            <th>Numéro</th>
                            <td>{{ player.jerseyNumber }}</td>
                        </tr>
                    </table>
                </div>
                <div class="col-md-4">
                    {% if player.photoFilename %}
                        <div class="text-center">
                            <img src="{{ asset('uploads/players/' ~ player.photoFilename) }}" 
                                 alt="Photo de {{ player.firstName }} {{ player.lastName }}"
                                 class="img-fluid rounded"
                                 style="max-height: 200px;">
                        </div>
                    {% endif %}
                </div>
            </div>

            <div class="d-flex justify-content-between">
                <form method="post" style="display: inline;">
                    <input type="hidden" name="action" value="modify">
                    <button type="submit" class="btn btn-secondary">
                        <i class="fas fa-edit"></i> Modifier
                    </button>
                </form>

                <form method="post" style="display: inline;">
                    <input type="hidden" name="action" value="confirm">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-check"></i> Valider
                    </button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
