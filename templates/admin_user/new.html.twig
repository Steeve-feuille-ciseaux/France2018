{% extends 'base.html.twig' %}

{% block title %}Nouvel utilisateur{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h1 class="h3 mb-0">Nouvel utilisateur</h1>
                    </div>
                    <div class="card-body">
                        {{ form_start(form) }}
                            <div class="mb-3">
                                {{ form_label(form.pseudo, 'Pseudo') }}
                                {{ form_widget(form.pseudo) }}
                                {{ form_errors(form.pseudo) }}
                            </div>
                            <div class="mb-3">
                                {{ form_label(form.password, 'Mot de passe') }}
                                {{ form_widget(form.password) }}
                                {{ form_errors(form.password) }}
                            </div>
                            <div class="mb-3">
                                {{ form_label(form.role, 'Rôle') }}
                                {{ form_widget(form.role) }}
                                {{ form_errors(form.role) }}
                            </div>
                            <div class="d-flex justify-content-between">
                                <a href="{{ path('app_admin_user_index') }}" class="btn btn-secondary">Retour</a>
                                <button type="submit" class="btn btn-primary">Créer</button>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
