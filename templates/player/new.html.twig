{% extends 'base.html.twig' %}

{% block title %}Nouveau joueur{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h1 class="h3 mb-0">Créer un nouveau joueur</h1>
                    </div>
                    <div class="card-body">
                        {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    {{ form_row(form.firstName) }}
                                </div>
                                <div class="col-md-6 mb-3">
                                    {{ form_row(form.lastName) }}
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    {{ form_row(form.birthDate) }}
                                </div>
                                <div class="col-md-6 mb-3">
                                    {{ form_row(form.nationality) }}
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    {{ form_row(form.position) }}
                                </div>
                                <div class="col-md-6 mb-3">
                                    {{ form_row(form.jerseyNumber) }}
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    {{ form_row(form.club) }}
                                </div>
                                <div class="col-md-6 mb-3">
                                    {{ form_row(form.worldCups) }}
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-12 mb-3">
                                    {{ form_row(form.photoFile) }}
                                    <small class="form-text text-muted">
                                        Formats acceptés : JPG, PNG. Taille maximale : 1MB
                                    </small>
                                </div>
                            </div>

                            <div class="d-flex justify-content-between">
                                <div>
                                    <button class="btn btn-primary">{{ button_label|default('Enregistrer') }}</button>
                                    <a href="{{ path('app_player_index') }}" class="btn btn-secondary">Retour à la liste</a>
                                </div>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
