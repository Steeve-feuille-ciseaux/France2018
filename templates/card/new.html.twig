{% extends 'base.html.twig' %}

{% block title %}Nouvelle Carte{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <h1 class="mb-4">Créer une nouvelle carte</h1>

                {{ form_start(form, {'attr': {'id': 'card-form'}}) }}
                {{ form_errors(form) }}
                
                <div class="alert alert-info">
                    <strong>Note :</strong> Votre carte devra être validée par un modérateur avant d'être visible publiquement.
                </div>

                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h5 class="card-title mb-0">Informations de la carte</h5>
                    </div>
                    <div class="card-body">
                        {# Sélection du joueur #}
                        <div class="mb-4">
                            <h6 class="text-primary mb-3">Joueur associé</h6>
                            {{ form_row(form.player, {
                                'attr': {
                                    'class': 'form-select'
                                }
                            }) }}
                        </div>

                        {# Informations principales #}
                        <div class="row mb-4">
                            <h6 class="text-primary mb-3">Informations principales</h6>
                            <div class="col-md-6">
                                {{ form_row(form.number) }}
                                {{ form_row(form.position) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_row(form.startSeason) }}
                                {{ form_row(form.endSeason) }}
                            </div>
                        </div>

                        {# Image #}
                        <div class="mb-4">
                            <h6 class="text-primary mb-3">Image de la carte</h6>
                            <div class="custom-file">
                                {{ form_widget(form.image, {
                                    'attr': {
                                        'class': 'form-control'
                                    }
                                }) }}
                                {{ form_errors(form.image) }}
                            </div>
                        </div>

                        {# Descriptions #}
                        <div class="mb-4">
                            <h6 class="text-primary mb-3">Descriptions</h6>
                            {{ form_row(form.summary) }}
                            {{ form_row(form.notableAction) }}
                        </div>
                    </div>
                </div>

                <div class="mt-4 d-flex justify-content-between">
                    <a href="{{ path('app_player_index') }}" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Retour
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i>Créer la carte
                    </button>
                </div>

                {{ form_rest(form) }}
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .card {
            border: none;
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        }
        .card-header {
            background-color: #1a237e;
            color: white;
        }
        .text-primary {
            color: #1a237e !important;
        }
        .btn-primary {
            background-color: #1a237e;
            border-color: #1a237e;
        }
        .btn-primary:hover {
            background-color: #0d47a1;
            border-color: #0d47a1;
        }
        .form-control:focus, .form-select:focus {
            border-color: #1a237e;
            box-shadow: 0 0 0 0.25rem rgba(26, 35, 126, 0.25);
        }
    </style>
{% endblock %}
