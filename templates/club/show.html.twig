{% extends 'base.html.twig' %}

{% block title %}Club{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>{{ club.nom }}</h1>

        <div class="row">
            <div class="col-md-4">
                {% if club.blason %}
                    <img src="{{ asset('uploads/blasons/' ~ club.blason) }}" alt="Blason {{ club.nom }}" class="img-fluid mb-3">
                {% endif %}
            </div>
            <div class="col-md-8">
                <table class="table">
                    <tbody>
                        <tr>
                            <th>Pays</th>
                            <td>{{ club.pays ? club.pays.nom : '' }}</td>
                        </tr>
                        <tr>
                            <th>Histoire</th>
                            <td>{{ club.histoire|nl2br }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="mt-3">
            <a href="{{ path('app_club_index') }}" class="btn btn-secondary">Retour Ã  la liste</a>
            <a href="{{ path('app_club_edit', {'id': club.id}) }}" class="btn btn-warning">Modifier</a>
            {{ include('club/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
