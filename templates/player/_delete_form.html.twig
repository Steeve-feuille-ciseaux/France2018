<form method="post" action="{{ path('app_player_delete', {'id': player.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce joueur ?');" class="d-inline">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ player.id) }}">
    <button class="btn btn-danger">
        <i class="fas fa-trash-alt me-1"></i>
        Supprimer
    </button>
</form>
