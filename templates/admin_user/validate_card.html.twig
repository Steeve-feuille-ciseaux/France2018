{% extends 'base.html.twig' %}

{% block title %}Valider la carte{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h1 class="h3 mb-0">Valider la carte</h1>
                    </div>
                    <div class="card-body">
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <h5>Détails de la carte</h5>
                                <ul class="list-unstyled">
                                    <li><strong>Joueur:</strong> {{ card.player.firstName }} {{ card.player.lastName }}</li>
                                    <li><strong>Club:</strong> {{ card.club.nom }}</li>
                                    <li><strong>Numéro:</strong> {{ card.number }}</li>
                                    <li><strong>Position:</strong> {{ card.position }}</li>
                                    <li><strong>Saison:</strong> {{ card.startSeason }}{% if card.endSeason %} - {{ card.endSeason }}{% endif %}</li>
                                </ul>
                            </div>
                            <div class="col-md-6">
                                {% if card.imageFilename %}
                                    <img src="{{ asset('uploads/cards/' ~ card.imageFilename) }}" alt="Image de la carte" class="img-fluid">
                                {% endif %}
                            </div>
                        </div>

                        <form method="post">
                            <div class="d-flex justify-content-between">
                                <a href="{{ path('app_admin_user_cards', {'id': card.signature.id}) }}" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left me-1"></i>
                                    Retour
                                </a>
                                <button type="submit" class="btn btn-success">
                                    <i class="fas fa-check me-1"></i>
                                    Valider la carte
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
