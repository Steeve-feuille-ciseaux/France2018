{% extends 'base.html.twig' %}

{% block title %}Cartes non validées{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Cartes non validées pour {{ profil.pseudo }}</h1>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        <table class="table">
            <thead>
                <tr>
                    <th>Joueur</th>
                    <th>Club</th>
                    <th>Numéro</th>
                    <th>Position</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for card in cards %}
                <tr>
                    <td>{{ card.player.firstName }} {{ card.player.lastName }}</td>
                    <td>{{ card.club ? card.club.nom : '' }}</td>
                    <td>{{ card.number }}</td>
                    <td>{{ card.position }}</td>
                    <td>
                        <a href="{{ path('app_admin_user_validate_card', {'id': card.id}) }}" class="btn btn-success btn-sm">
                            Valider
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">Aucune carte à valider</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_admin_user_index') }}" class="btn btn-secondary">Retour à la liste</a>
    </div>
{% endblock %}
