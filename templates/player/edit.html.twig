{% extends 'base.html.twig' %}

{% block title %}Modifier le joueur{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h1 class="h3 mb-0">Modifier {{ player.firstName }} {{ player.lastName }}</h1>
                    </div>
                    <div class="card-body">
                        {{ include('player/_form.html.twig', {'button_label': 'Mettre à jour'}) }}

                        <div class="d-flex justify-content-between mt-3">
                            <a href="{{ path('app_player_index') }}" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i>
                                Retour à la liste
                            </a>
                            {{ include('player/_delete_form.html.twig') }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .form-group {
            margin-bottom: 1.5rem;
        }
        .form-label {
            font-weight: 500;
            margin-bottom: 0.5rem;
        }
    </style>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}
