{% extends 'base.html.twig' %}

{% block title %}{{ player.firstName }} {{ player.lastName }}{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-4">
                {% if player.photoFilename %}
                    <img src="{{ asset('uploads/player/' ~ player.photoFilename) }}" 
                         alt="Photo de {{ player.firstName }} {{ player.lastName }}" 
                         class="img-fluid rounded shadow-sm mb-4">
                {% endif %}
            </div>
            <div class="col-md-8">
                <h1 class="mb-4">{{ player.firstName }} {{ player.lastName }}</h1>
                
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-primary text-white">
                        <h5 class="card-title mb-0">Informations personnelles</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <p><strong>Date de naissance:</strong> {{ player.birthDate ? player.birthDate|date('d/m/Y') : '' }}</p>
                                <p><strong>Nationalité:</strong> {{ player.nationality }}</p>
                                <p><strong>Position:</strong> {{ player.position }}</p>
                            </div>
                            <div class="col-md-6">
                                <p><strong>Numéro:</strong> {{ player.jerseyNumber }}</p>
                                <p><strong>Club actuel:</strong> {{ player.currentClub }}</p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-primary text-white">
                        <h5 class="card-title mb-0">Palmarès</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <p><strong>Coupes du Monde:</strong> {{ player.worldCups }}</p>
                                <p><strong>Ligues des Champions:</strong> {{ player.championsLeague }}</p>
                                <p><strong>Ligues Europa:</strong> {{ player.europeLeague }}</p>
                            </div>
                            <div class="col-md-6">
                                <p><strong>Championnats Nationaux:</strong> {{ player.nationalChampionship }}</p>
                                <p><strong>Coupes Nationales:</strong> {{ player.nationalCup }}</p>
                            </div>
                        </div>
                    </div>
                </div>

                {% if player.summary %}
                    <div class="card shadow-sm mb-4">
                        <div class="card-header bg-primary text-white">
                            <h5 class="card-title mb-0">Histoire</h5>
                        </div>
                        <div class="card-body">
                            <p class="card-text">{{ player.summary }}</p>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>

        {% if player.cards|length > 0 %}
            <div class="row mt-4">
                <div class="col-12">
                    <div class="card shadow-sm">
                        <div class="card-header bg-primary text-white">
                            <h5 class="card-title mb-0">Cartes du joueur</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                {% for card in player.cards %}
                                    <div class="col-md-4 mb-4">
                                        <div class="card h-100 shadow-hover">
                                            {% if card.imageFilename %}
                                                <a href="{{ path('app_card_show', {'id': card.id}) }}" class="card-link">
                                                    <img src="{{ asset('uploads/cards/' ~ card.imageFilename) }}" 
                                                         class="card-img-top" 
                                                         alt="Carte de {{ player.firstName }} {{ player.lastName }}">
                                                </a>
                                            {% endif %}
                                            <div class="card-body">
                                                <h6 class="card-title text-center">Saison {{ card.startSeason }}{% if card.endSeason %} - {{ card.endSeason }}{% endif %}</h6>
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}

        <div class="mt-4">
            <a href="{{ path('app_player_index') }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-2"></i>Retour à la liste
            </a>
            <a href="{{ path('app_player_edit', {'id': player.id}) }}" class="btn btn-primary">
                <i class="fas fa-edit me-2"></i>Modifier
            </a>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .card {
            border: none;
            transition: all 0.3s ease;
        }
        .shadow-hover:hover {
            transform: translateY(-5px);
        }
        .card-header {
            background-color: #1a237e;
            color: white;
        }
        .text-primary {
            color: #1a237e !important;
        }
        .btn-primary {
            background-color: #1a237e;
            border-color: #1a237e;
        }
        .btn-primary:hover {
            background-color: #0d47a1;
            border-color: #0d47a1;
        }
        .card-img-top {
            height: 300px;
            object-fit: cover;
        }
        .card-link {
            text-decoration: none;
        }
        .card-link:hover {
            text-decoration: none;
        }
    </style>
{% endblock %}
